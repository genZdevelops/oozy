{
  "name": "Flutter & Spring Boot App",
  "image": "mcr.microsoft.com/devcontainers/universal:2",

  "features": {
    // This Java feature works correctly.
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17",
      "installGradle": "true"
    },
    // Using the Dart template/feature you found.
    "ghcr.io/devcontainers-community/templates/dart:1": {
      "installFlutter": true
    }
  },

  // Forward necessary ports.
  "forwardPorts": [8080],

  // Commands to run after the container is created.
  "postCreateCommand": "flutter doctor",

  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vscjava.vscode-spring-boot-dashboard",
        "Dart-Code.dart-code",
        "Dart-Code.flutter"
      ]
    }
  }
}
