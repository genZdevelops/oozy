{
  "name": "Flutter & Spring Boot App",
  "image": "mcr.microsoft.com/devcontainers/universal:2",

  "features": {
    // We know this Java feature works.
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17",
      "installGradle": "true"
    }
  },

  // This command now runs our manual installation script.
  "postCreateCommand": {
    "install-flutter": "bash .devcontainer/install-flutter.sh"
  },

  "remoteUser": "root", // Run as root to allow the script to work

  "forwardPorts": [8080],

  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vscjava.vscode-spring-boot-dashboard",
        "Dart-Code.dart-code",
        "Dart-Code.flutter"
      ]
    }
  }
}
